<%- include('partials/header') %>

<div class="w-full min-h-screen flex justify-center items-center bg-gray-50 py-10 px-5">
  <div class="bg-white shadow-lg rounded-2xl p-8 w-full sm:w-[500px]">
    <h2 class="text-2xl font-bold text-center mb-6 text-gray-700">üõçÔ∏è Create New Product</h2>

    <% if (success) { %>
      <div class="bg-green-100 text-green-700 p-3 rounded-md mb-4 text-center"><%= success %></div>
    <% } %>
    <% if (error) { %>
      <div class="bg-red-100 text-red-700 p-3 rounded-md mb-4 text-center"><%= error %></div>
    <% } %>

    <form action="/owners/admin/create" method="POST" enctype="multipart/form-data">

      <div>
        <label class="block text-gray-600 font-medium mb-2">Product Name</label>
        <input type="text" name="name" required class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" />
      </div>

      <div class="flex gap-4">
        <div class="flex-1">
          <label class="block text-gray-600 font-medium mb-2">Price (‚Çπ)</label>
          <input type="number" name="price" required class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" />
        </div>
        <div class="flex-1">
          <label class="block text-gray-600 font-medium mb-2">Discount (‚Çπ)</label>
          <input type="number" name="discount" value="0" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" />
        </div>
      </div>

      <div class="flex gap-4">
        <div class="flex-1">
          <label class="block text-gray-600 font-medium mb-2">Background Color</label>
          <input type="text" name="bgcolor" placeholder="#ffffff" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" />
        </div>
        <div class="flex-1">
          <label class="block text-gray-600 font-medium mb-2">Panel Color</label>
          <input type="text" name="panelcolor" placeholder="#f3f4f6" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" />
        </div>
      </div>

      <div>
        <label class="block text-gray-600 font-medium mb-2">Text Color</label>
        <input type="text" name="textcolor" placeholder="#000000" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none" />
      </div>

      <div>
        <label class="block text-gray-600 font-medium mb-2">Product Image</label>
        <input type="file" name="image" accept="image/*" required class="w-full p-2 border rounded-lg bg-gray-50 cursor-pointer" />
      </div>

      <button type="submit" class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg shadow-md transition">
        Create Product
      </button>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
