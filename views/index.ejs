<%- include("partials/header") %>

<!-- 🔔 Flash Message -->
<% if (error && error.length > 0) { %>
  <div class="fixed top-5 left-1/2 -translate-x-1/2 z-50 bg-red-500 text-white px-6 py-3 rounded-md shadow-lg">
    <%= error %>
  </div>
<% } %>

<!-- 🌈 Auth Page Layout -->
<div class="min-h-screen flex flex-col md:flex-row items-center justify-center bg-gradient-to-br from-indigo-50 via-white to-blue-50 px-6 py-10">

  <!-- 👜 Left Section (Register) -->
  <div class="w-full md:w-1/2 max-w-md bg-white shadow-xl rounded-2xl p-8 mb-8 md:mb-0 md:mr-10 border border-gray-100">
    <h3 class="text-3xl font-bold mb-2 text-gray-800">
      Welcome to <span class="text-blue-500">CarryHub</span>
    </h3>
    <p class="text-gray-500 mb-6 text-sm">Create your free account and start selling or buying beautiful bags.</p>

    <form autocomplete="off" action="/users/register" method="post" class="space-y-4">
      <div>
        <input
          class="bg-gray-50 w-full px-4 py-3 border rounded-lg border-gray-200 focus:border-blue-400 focus:ring-2 focus:ring-blue-100 outline-none"
          type="text" placeholder="Full Name" name="fullname" required>
      </div>

      <div>
        <input
          class="bg-gray-50 w-full px-4 py-3 border rounded-lg border-gray-200 focus:border-blue-400 focus:ring-2 focus:ring-blue-100 outline-none"
          type="email" placeholder="Email" name="email" required>
      </div>

      <div>
        <input
          class="bg-gray-50 w-full px-4 py-3 border rounded-lg border-gray-200 focus:border-blue-400 focus:ring-2 focus:ring-blue-100 outline-none"
          type="password" placeholder="Password" name="password" required>
      </div>

      <button
        type="submit"
        class="w-full py-3 mt-3 rounded-lg bg-gradient-to-r from-blue-500 to-indigo-500 text-white font-semibold hover:opacity-90 transition">
        Create My Account
      </button>
    </form>

    <p class="text-sm text-gray-500 mt-5 text-center">
      Already have an account?
      <a href="#login-section" class="text-blue-500 font-medium hover:underline">Login here</a>
    </p>
  </div>

  <!-- 🔐 Right Section (Login) -->
  <div id="login-section" class="w-full md:w-1/2 max-w-md bg-white shadow-xl rounded-2xl p-8 border border-gray-100">
    <h4 class="text-2xl font-bold mb-4 text-gray-800">Login to your account</h4>
    <p class="text-gray-500 mb-6 text-sm">Welcome back! Please enter your details below.</p>

    <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
      <div>
        <input
          class="bg-gray-50 w-full px-4 py-3 border rounded-lg border-gray-200 focus:border-blue-400 focus:ring-2 focus:ring-blue-100 outline-none"
          type="email" placeholder="Email" name="email" required>
      </div>

      <div>
        <input
          class="bg-gray-50 w-full px-4 py-3 border rounded-lg border-gray-200 focus:border-blue-400 focus:ring-2 focus:ring-blue-100 outline-none"
          type="password" placeholder="Password" name="password" required>
      </div>

      <button
        type="submit"
        class="w-full py-3 mt-3 rounded-lg bg-gradient-to-r from-indigo-500 to-blue-500 text-white font-semibold hover:opacity-90 transition">
        Login
      </button>
    </form>

    <p class="text-sm text-gray-500 mt-5 text-center">
      Don’t have an account?
      <a href="/" class="text-blue-500 font-medium hover:underline">Register now</a>
    </p>
  </div>
</div>

<%- include('partials/footer') %>
